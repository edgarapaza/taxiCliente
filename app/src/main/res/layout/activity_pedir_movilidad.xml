<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PedirMovilidad">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    app:srcCompat="@mipmap/foto1" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/auto1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Movil 48 - Carlos Meza" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TOYOTA -BLANCO XIA-521" />
            </LinearLayout>



            <EditText
                android:id="@+id/txtDireccionPM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Direccion" />

            <EditText
                android:id="@+id/txtReferenciaPM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Referencia" />

            <EditText
                android:id="@+id/txtOtrosPM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Otros" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opcional"/>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/optNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Normal"
                    android:onClick="checkOption"/>
                <RadioButton
                    android:id="@+id/optGrande"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grande"
                    android:onClick="checkOption"/>

                <RadioButton
                    android:id="@+id/optParrilla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Con parrila"
                    android:onClick="checkOption"/>

                <RadioButton
                    android:id="@+id/optSixAsientos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6 Asientos"
                    android:onClick="checkOption"/>
            </RadioGroup>

            <TextView
                android:id="@+id/txtEleccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eleccion"
                />

            <Button
                android:id="@+id/btnPedirMovilidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_dark"
                android:text="Pedir Movilidad"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calificacion" />

            <ImageButton
                android:id="@+id/btnLlamar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_call" />

            <ImageButton
                android:id="@+id/btnMensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_dialog_email" />

            <Button
                android:id="@+id/btnSalirMovilidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="salir"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>